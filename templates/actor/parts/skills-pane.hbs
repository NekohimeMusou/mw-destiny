<div class="flexcol">
  <ol class="items-list">
    <li class="item flexrow items-header">
      <div class="item-name">{{localize "MWDESTINY.skills.skill"}}</div>
      <div class="item-total">{{localize "MWDESTINY.skills.total"}}</div>
      <div class="item-link">{{localize "MWDESTINY.mechanic.link"}}</div>
      <div class="item-rank">{{localize "MWDESTINY.mechanic.rank"}}</div>
      <div class="item-controls">
        <a class="item-control item-create" title="{{localize "MWDESTINY.sheet.createItem"}}" data-type="skill"><i class="fas fa-plus"></i> {{localize "MWDESTINY.sheet.addItem"}}</a>
      </div>
    </li>
    {{#each skills as |item|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="roll-test" data-roll-label="{{item.name}}" data-is-skill="1", data-attr="{{item.system.link}}" data-skill-rank="{{item.system.rank}}"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        <input type="text" class="item-field" data-dtype="String" data-field-name="name" value="{{item.name}}"/>
      </div>
      <div class="item-total item-prop">
        <input type="number" value="{{item.system.total}}" disabled/>
      </div>
      <div class="item-link item-prop">
        <select class="item-link-select">
          {{selectOptions ../MWDESTINY.attributes selected=item.system.link}}
        </select>
      </div>
      <div class="item-rank item-prop">
        <input class="item-field" type="number" data-dtype="Number" data-field-name="system.rank" placeholder="0" value="{{item.system.rank}}"/>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="{{localize "MWDESTINY.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize "MWDESTINY.sheet.deleteItem"}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>