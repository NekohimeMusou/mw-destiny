<form class="flexcol {{cssClass}} {{actor.type}}" autocomplete="off">
  {{!-- Sheet Header --}}
  {{> "systems/mw-destiny/templates/parts/hardware/header.hbs"}}

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is defined in sheet JS class --}}
    <a class="item" data-tab="main">{{localize "MWDESTINY.tabs.main"}}</a>
    <a class="item" data-tab="description">{{localize "MWDESTINY.tabs.description"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{!-- Stats Tab --}}
    <div class="tab main" data-group="primary" data-tab="main">
      {{> "systems/mw-destiny/templates/parts/hardware/tab-main.hbs"}}
    </div>

    {{!-- Description Tab --}}
    <div class="tab description" data-group="primary" data-tab="description">
      {{> "systems/mw-destiny/templates/parts/shared/tab-description.hbs"}}
    </div>

  </section>
</form>
