<form class="flexcol">
  {{#if targetName}}
  <div class="dialog-label align-center">
    {{localize "MWDESTINY.mechanic.target" name=targetName}}
  </div>
  {{/if}}
  <div class="flexrow">
    <div class="flexcol">
      <div>{{localize "MWDESTINY.mechanic.attribute"}}{{#unless skillRank}} 1{{/unless}}</div>
      <select disabled>
        {{selectOptions MWDESTINY.attributes.pc selected=attr}}
      </select>
    </div>
    {{#if skillName}}
    <div class="flexcol">
      <div>{{localize "MWDESTINY.skills.rank"}}</div>
      <input type="Number" name="skill-rank" value="{{skillRank}}" disabled/>
    </div>
    {{else}}
    <div class="flexcol">
      <div>{{localize "MWDESTINY.mechanic.attribute"}} 2</div>
      <select name="attr2">
        {{selectOptions MWDESTINY.attributes.pc selected=attr blank=(localize "MWDESTINY.skills.unskilled")}}
      </select>
    </div>
    {{/if}}
  </div>
  {{#unless targetName}}
  <div class="flexcol flex-group-left flex-between">
    <label>{{localize "MWDESTINY.mechanic.difficulty"}}:</label>
    {{radioBoxes "difficulty" MWDESTINY.rollDifficulties checked="3d6" localize=true}}
  </div>
  {{/unless}}
  {{#if range}}
  <div class="flexcol flex-group-left">
    <label>{{localize "MWDESTINY.mechanic.range"}}</label>
    {{radioBoxes "rangeMod" (lookup MWDESTINY.weaponRange (ifThen (eq weaponType "weapon") "personal" "heavy"))
    checked=(ifThen (eq weaponType "weapon") "close" "short") localize=true}}
  </div>
  {{/if}}
  <div class="flexrow">
    <label>{{localize "MWDESTINY.dialog.rollModifier"}}:</label>
    <input type="number" placeholder="0" name="mod" data-dtype="Number" autofocus/>
  </div>
</form>