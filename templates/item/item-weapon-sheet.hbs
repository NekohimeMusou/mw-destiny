<form class="{{cssClass}}" autocomplete="off">
  {{> "systems/mw-destiny/templates/item/parts/header.hbs"}}

  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is defined in actor-sheet.mjs --}}
    <a class="item" data-tab="main">{{localize "MWDESTINY.tabs.main"}}</a>
    <a class="item" data-tab="description">{{localize "MWDESTINY.tabs.description"}}</a>
  </nav>

  <section class="sheet-body">
    <div class="tab main" data-group="primary" data-tab="main">
      <div class="flexcol">
        <div class="flexrow">
          <div class="flexrow">
            <label class="resource-label">{{localize "MWDESTINY.combat.damage"}}</label>
            <input type="Number" name="system.baseDamage" value="{{system.baseDamage}}" data-dtype="Number"/>
          </div>
          <div class="flexrow">
            <label class="resource-label">{{localize "MWDESTINY.combat.stun"}}</label>
            <input type="checkbox" name="system.isStunWeapon" {{checked system.isStunWeapon}}/>
          </div>
        </div>

        <div class="flexrow">
          <div class="flexrow">
            <label class="resource-label">{{localize "MWDESTINY.combat.damageType"}}</label>
            <select name="system.damageType">
              {{selectOptions MWDESTINY.damageTypes blank="---" localize=true}}
            </select>
          </div>
          <div class="flexrow">
            <div class="flexrow">
              <label class="resource-label">{{localize "MWDESTINY.combat.strPowered"}}</label>
              <input type="checkbox" name="system.isStrPowered" {{checked system.isStrPowered}}/>
            </div>
          </div>
        </div>

        <div class="flexrow">
          {{#each system.range}}
          <div class="flexcol">
            <div class="flexrow">
              <label class="resource-label">{{localize (concat "MWDESTINY.combat.range." @key)}}</label>
              <input type="checkbox" name="system.range.{{@key}}.usable" {{checked usable}}/>
            </div>
            <div class="flexrow">
              <label class="resource-label">{{localize "MWDESTINY.combat.mechanic.mod"}}</label>
              <input type="number" name="system.range.{{@key}}.mod" value="{{mod}}" {{#unless usable}}disabled{{/unless}}/>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="tab description" data-group="primary" data-tab="description">
      {{editor system.description target="system.description" button=true editable=editable}}
    </div>
  </section>
</form>