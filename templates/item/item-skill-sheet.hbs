<form class="{{cssClass}}" autocomplete="off">
  {{> "systems/mw-destiny/templates/parts/item/header.hbs"}}

  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is defined in pc-sheet.mjs --}}
    <a class="item" data-tab="main">{{localize "MWDESTINY.tabs.main"}}</a>
    <a class="item" data-tab="description">{{localize "MWDESTINY.tabs.description"}}</a>
  </nav>

  <section class="sheet-body">
    <div class="tab main" data-group="primary" data-tab="main">
      <div class="flexcol">
        <div class="flexrow">
          <label class="resource-label">{{localize "MWDESTINY.combat.weaponSkill"}}</label>
          <select name="system.weaponSkillType">
          {{selectOptions MWDESTINY.weaponSkillTypes localize=true blank="None" selected=system.weaponSkillType}}
        </select>
        </div>

        <div class="flexrow">
          <label class="resource-label">{{localize "MWDESTINY.mechanic.attribute"}}</label>
          <select name="system.link">
            {{selectOptions MWDESTINY.attributes selected=system.link}}
          </select>
        </div>
      </div>
    </div>

    <div class="tab description" data-group="primary" data-tab="description">
      {{> "systems/mw-destiny/templates/parts/shared/tab-description.hbs"}}
    </div>
  </section>
</form>