<div class="pane vital-stats grid grid-2col">
  <div class="resource-label">{{localize "MWDESTINY.hardware.hardwarePoints"}}</div>
  <input type="number" name="system.hardwarePoints" value="{{system.hardwarePoints}}" data-dtype="Number"/>

  <div class="resource-label">{{localize "MWDESTINY.hardware.tonnage"}}</div>
  <input type="number" name="system.tonnage" value="{{system.tonnage}}" data-dtype="Number"/>

  <div class="resource-label">{{localize "MWDESTINY.hardware.baseMovement"}}</div>
  <input type="number" name="system.baseMovement" value="{{system.baseMovement}}" data-dtype="Number"/>

  {{#if (or (eq system.hardwareType "mech") (eq system.hardwareType "battleArmor"))}}
  <div class="resource-label">{{localize "MWDESTINY.hardware.jumpJets"}}?</div>
  <input type="checkbox" name="system.hasJumpJets" {{checked system.hasJumpJets}}/>
  {{/if}}
</div>