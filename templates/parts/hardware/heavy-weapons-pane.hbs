<div class="flexcol">
  <ol class="items-list">
    <li class="item flexrow items-header">
      <div class="item-name flex2">{{localize "MWDESTINY.combat.weapon"}}</div>
      <div class="item-damage">{{localize "MWDESTINY.combat.dmg"}}</div>
      {{#if (or (eq system.hardwareType "mech") (eq system.hardwareType "aerospace"))}}
      <div class="item-heat">{{localize "MWDESTINY.hardware.heat"}}</div>
      {{/if}}
      <div class="item-location">{{localize "MWDESTINY.hardware.loc"}}</div>
      {{#each MWDESTINY.weaponRange.heavy}}
      <div class="item-{{@key}}-range">{{localize (concat "MWDESTINY.range.heavy.abbrev." @key)}}</div>
      {{/each}}
      <div class="item-controls">
        <a class="item-control item-create" title="{{localize "MWDESTINY.sheet.createItem"}}" data-type="heavyWeapon">
          <i class="fas fa-plus"></i> {{localize "MWDESTINY.sheet.addItem"}}</a>
      </div>
    </li>
    {{#if (eq system.hardwareType "mech")}}
    {{#if system.canPunch}}
    <li class="item flexrow">
      <div class="item-name flex2">
        <div class="item-image">
          <a class="phys-attack" data-attack-type="punch">
            <img src="icons/svg/item-bag.svg" title="{{localize "MWDESTINY.combat.physAttack.punch"}}" width="24" height="24"/>
          </a>
        </div>
        <input type="text" value="{{localize "MWDESTINY.combat.physAttack.punch"}}" disabled/>
      </div>
      <div class="item-damage item-prop">
        <input type="text" value="{{system.physDamage.punch}}" disabled/>
      </div>
      {{#if (or (eq system.hardwareType "mech") (eq system.hardwareType "aerospace"))}}
      <div class="item-heat item-prop">
        <input type="text" value="—" disabled/>
      </div>
      {{/if}}
      <div class="item-location item-prop">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="OK" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-controls">
      </div>
    </li>
    {{/if}}
    {{#if system.canKick}}
    <li class="item flexrow">
      <div class="item-name flex2">
        <div class="item-image">
          <a class="phys-attack" data-attack-type="kick">
            <img src="icons/svg/item-bag.svg" title="{{localize "MWDESTINY.combat.physAttack.kick"}}" width="24" height="24"/>
          </a>
        </div>
        <input type="text" value="{{localize "MWDESTINY.combat.physAttack.kick"}}" disabled/>
      </div>
      <div class="item-damage item-prop">
        <input type="text" value="{{system.physDamage.kick}}" disabled/>
      </div>
      {{#if (or (eq system.hardwareType "mech") (eq system.hardwareType "aerospace"))}}
      <div class="item-heat item-prop">
        <input type="text" value="—" disabled/>
      </div>
      {{/if}}
      <div class="item-location item-prop">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="OK" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-controls">
      </div>
    </li>
    {{/if}}
    {{/if}}
    {{#if (or (eq system.hardwareType "combatVehicle") (eq system.hardwareType "turretVehicle") (eq system.hardwareType "vtol"))}}
    <li class="item flexrow">
      <div class="item-name flex2">
        <div class="item-image">
          <a class="phys-attack" data-attack-type="ram">
            <img src="icons/svg/item-bag.svg" title="{{localize "MWDESTINY.combat.physAttack.ram"}}" width="24" height="24"/>
          </a>
        </div>
        <input type="text" value="{{localize "MWDESTINY.combat.physAttack.ram"}}" disabled/>
      </div>
      <div class="item-damage item-prop">
        <input type="text" value="{{system.physDamage.ram}}" disabled/>
      </div>
      {{#if (or (eq system.hardwareType "mech") (eq system.hardwareType "aerospace"))}}
      <div class="item-heat item-prop">
        <input type="text" value="—" disabled/>
      </div>
      {{/if}}
      <div class="item-location item-prop">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="OK" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-prop flex-group-center">
        <input type="text" value="—" disabled/>
      </div>
      <div class="item-controls">
      </div>
    </li>
    {{/if}}
    {{#each heavyWeapon as |item|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name flex2">
        <div class="item-image">
          <a class="weapon-attack">
            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
          </a>
        </div>
        <input type="text" value="{{item.name}}" disabled/>
      </div>
      <div class="item-damage item-prop">
        <input type="text" value="{{system.damageCode}}" disabled/>
      </div>
      {{#if (or (eq ../system.hardwareType "mech") (eq ../system.hardwareType "aerospace"))}}
      <div class="item-heat item-prop">
        <input type="text" value="{{system.heat}}" disabled/>
      </div>
      {{/if}}
      <div class="item-location item-prop">
        <input type="text" class="item-field" data-field-name="system.location" placeholder="—" data-dtype="String" value="{{system.location}}"/>
      </div>
      {{#each system.range}}
      <div class="item-prop flex-group-center">
        <input type="text" value="{{label}}" disabled/>
      </div>
      {{/each}}
      <div class="item-controls">
        <a class="item-control item-edit" title="{{localize "MWDESTINY.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize "MWDESTINY.sheet.deleteItem"}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>