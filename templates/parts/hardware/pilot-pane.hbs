<section class="pane pilot flexcol flex0">
  <div class="flexrow">
    {{!-- HW type | Pilot name --}}
    <div class="hardware-type flexrow">
      <label class="resource-label">{{localize "MWDESTINY.hardware.type"}}</label>
      <select name="system.hardwareType">
        {{selectOptions MWDESTINY.hardwareTypes selected=system.hardwareType localize=true}}
      </select>
    </div>

    <div class="pilot-name flexrow">
      <label class="resource-label">{{localize "MWDESTINY.hardware.pilot"}}</label>
      <input type="text" class="flex2" value="{{system.pilotName}}" disabled/>
    </div>
  </div>

  <div class="flexrow">
    <div class="weight-class flexrow">
      <label class="resource-label">{{localize "MWDESTINY.hardware.weightClass"}}</label>
      <input class="flex2" type="text" name="system.weightClass" value="{{localize (concat "MWDESTINY.hardware.weightClasses." system.weightClass)}}" data-dtype="String" disabled/>
    </div>

    <div class="wound-penalty flexrow">
      <label class="resource-label">{{localize "MWDESTINY.mechanic.woundPenalty"}}</label>
      <input class="flex2" type="text" name="system.woundPenalty" value="{{system.woundPenalty}}" data-dtype="Number" disabled/>
    </div>
  </div>
</section>
