<section class="pane pilot flexcol flex0">
  <div class="flexrow">
    <div class="pilot-name flexrow">
      <label class="resource-label">{{localize "MWDESTINY.hardware.pilot"}}</label>
      <input type="text" class="flex2" value="{{system.pilotName}}" disabled/>
    </div>

    <div class="con-check-tn flexrow">
      <label class="resource-label">{{localize "MWDESTINY.sheet.conCheckTn"}}</label>
      <input class="flex2" type="text" name="system.conCheckTn" value="{{system.conCheckTn}}" disabled/>
    </div>
  </div>

  <div class="flexrow">
    <div class="wound-penalty flexrow">
      <label class="resource-label">{{localize "MWDESTINY.mechanic.woundPenalty"}}</label>
      <input class="flex2" type="text" name="system.woundPenalty" value="{{system.woundPenalty}}" disabled/>
    </div>

    <button type="button" class="con-check-btn">{{localize "MWDESTINY.sheet.conCheckBtn"}}</button>
  </div>
</section>
