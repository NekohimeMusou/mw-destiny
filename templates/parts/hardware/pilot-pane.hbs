<div class="flexcol">
  <div class="flexcol">
    <div class="flexrow">
      <label class="resource-label">{{localize "MWDESTINY.hardware.type"}}</label>
      <select name="system.hardwareType">
        {{selectOptions MWDESTINY.hardwareTypes selected=system.hardwareType localize=true}}
      </select>
    </div>
    <div class="flexrow">
      <label class="resource-label">{{localize "MWDESTINY.hardware.pilot"}}</label>
      <select name="system.pilotId">
        {{selectOptions ownedPcs nameAttr="id" labelAttr="name" blank="———" selected=system.pilotId}}
      </select>
      <label class="resource-label">{{localize "MWDESTINY.mechanic.woundPenalty"}}</label>
      <input type="text" value="{{system.woundPenalty}}" data-dtype="Number" disabled/>
    </div>
  </div>
  <div class="flexrow">
    <button type="button" class="piloting-test">
      {{localize "MWDESTINY.hardware.pilotingTestBtn"}}
    </button>
    <button type="button" class="repair-btn">{{localize "MWDESTINY.hardware.repairBtn"}}</button>
  </div>
</div>
