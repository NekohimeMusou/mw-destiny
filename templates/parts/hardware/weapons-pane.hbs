<div class="flexcol">
  <ol class="items-list">
    <li class="item flexrow items-header">
      <div class="item-name flex2">{{localize "MWDESTINY.combat.weapon"}}</div>
      <div class="item-damage">{{localize "MWDESTINY.combat.dmg"}}</div>
      <div class="item-heat">{{localize "MWDESTINY.hardware.heat"}}</div>
      <div class="item-location">{{localize "MWDESTINY.hardware.loc"}}</div>
      {{#each MWDESTINY.weaponRange.heavy}}
      <div class="item-{{@key}}-range">{{localize (concat "MWDESTINY.range.heavy.abbrev." @key)}}</div>
      {{/each}}
      <div class="item-controls">
        <a class="item-control item-create" title="{{localize "MWDESTINY.sheet.createItem"}}" data-type="heavyWeapon">
          <i class="fas fa-plus"></i> {{localize "MWDESTINY.sheet.addItem"}}</a>
      </div>
    </li>
    {{#each heavyWeapon as |item|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name flex2">
        <div class="item-image">
          {{!-- Fix this and the event handler --}}
          <a class="roll-test" data-roll-label="{{item.name}} Attack" data-attr="rfl" data-skill-name="{{item.system.weaponSkill.name}}"
            data-skill-rank="{{item.system.weaponSkill.system.rank}}" data-damage-code="{{item.system.damageCode}}">
            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
          </a>
        </div>
        <input type="text" value="{{item.name}}" disabled/>
      </div>
      <div class="item-damage item-prop">
        <input type="text" value="{{system.damageCode}}" disabled/>
      </div>
      <div class="item-heat item-prop">
        <input type="text" value="{{system.heat}}" disabled/>
      </div>
      <div class="item-location item-prop">
        <input type="text" value="{{system.location}}" disabled/>
      </div>
      {{#each system.range}}
      <div class="item-prop flex-group-center">
        <input type="text" value="{{label}}" disabled/>
      </div>
      {{/each}}
      <div class="item-controls">
        <a class="item-control item-edit" title="{{localize "MWDESTINY.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize "MWDESTINY.sheet.deleteItem"}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>