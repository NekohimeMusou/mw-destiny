<header class="sheet-header">
  <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
  <div class="header-fields">
    <h1 class="charname">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Name">
    </h1>
    <div class="resources flexcol">
      <div class="flexrow flex-group-center">
        <div class="flexcol">
          <label class="resource-label">{{localize "MWDESTINY.bio.age"}}</label>
          <input type="number" name="system.age" value="{{system.age}}" data-dtype="Number"/>
        </div>

        <div class="flexcol">
          <label class="resource-label">{{localize "MWDESTINY.bio.rank"}}</label>
          <input type="text" name="system.rank" value="{{system.rank}}" data-dtype="String"/>
        </div>

        <div class="flexcol">
          <label class="resource-label">{{localize "MWDESTINY.bio.heightWeight"}}</label>
          <input type="text" name="system.heightWeight" value="{{system.heightWeight}}" data-dtype="String"/>
        </div>

        {{!-- XP level, XP --}}
        {{#if (eq actor.type "pc")}}
        <div class="flexcol">
          <label class="resource-label">{{localize "MWDESTINY.mechanic.xpLevel"}}</label>
          <select name="system.xpLevel">
            {{selectOptions MWDESTINY.xpLevels localize=true selected=system.xpLevel}}
          </select>
        </div>

        <div class="flexcol">
          <label class="resource-label">{{localize "MWDESTINY.mechanic.xp"}}</label>
          <input type="number" name="system.xp" value="{{system.xp}}" data-dtype="Number"/>
        </div>
        {{/if}}
      </div>

      <div class="flexrow flex-group-center">
        <div class="resource flex-group-center">
          <label for="system.physDamage.value" class="resource-label">{{localize "MWDESTINY.mechanic.physDamage"}}</label>
          <div class="resource-content flexrow flex-center">
            <input type="text" name="system.physDamage.value" value="{{system.physDamage.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="text" name="system.physDamage.max" value="{{system.physDamage.max}}" data-dtype="Number" disabled/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.fatigueDamage.value" class="resource-label">{{localize "MWDESTINY.mechanic.fatigueDamage"}}</label>
          <div class="resource-content flexrow flex-center">
            <input type="text" name="system.fatigueDamage.value" value="{{system.fatigueDamage.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="text" name="system.fatigueDamage.max" value="{{system.fatigueDamage.max}}" data-dtype="Number" disabled/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.armor.hp.value" class="resource-label">{{localize "MWDESTINY.combat.armor"}}</label>
          <div class="resource-content flexrow flex-center">
            <input type="text" name="system.armor.hp.value" value="{{system.armor.hp.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="text" name="system.armor.hp.max" value="{{system.armor.hp.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="flexcol flex-group-center">
          <label class="resource-label">{{localize "MWDESTINY.mechanic.woundPenalty"}}</label>
          <input type="text" value="{{system.woundPenalty}}" data-dtype="Number" disabled/>
        </div>
        <div class="flexcol flex-group-center">
          <label class="resource-label">Battle Armor?</label>
          <input type="checkbox" name="system.ignoreWoundPenalty" data-dtype="Boolean" {{checked system.ignoreWoundPenalty}}/>
        </div>
      </div>
      <div class="flexrow flex-group-center">
        <div class="flexcol">
          <label class="resource-label">{{localize "MWDESTINY.combat.armorType"}}</label>
          <input type="text" name="system.armor.type" value="{{system.armor.type}}" data-dtype="String"/>
        </div>

        <div class="flexcol">
          <label class="resource-label">{{localize "MWDESTINY.combat.armorEffect"}}</label>
          <input type="text" name="system.armor.effect" value="{{system.armor.effect}}" data-dtype="String"/>
        </div>
      </div>
    </div>
  </div>
</header>
